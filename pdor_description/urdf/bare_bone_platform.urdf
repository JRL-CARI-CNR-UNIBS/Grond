<?xml version = "1.0"?>
<robot name = "platform" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Used for fixing robot to 'base_link' -->
  <link name="world"/>

  <!-- Base Link -->
  <link name = "base_link"/>
  <link name = "link1"/>
  <link name = "link2"/>
  <link name = "link3"/>
  <link name = "link4"/>

  <joint name="base2world" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
  </joint>


  <joint name = "joint_1" type="continuous">
    <parent link = "base_link"/>
    <child link = "link1"/>
    <origin xyz = "0.05 0.05 0.05"/>
    <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    <axis xyz = "0 0 1"/>
    <dynamics damping="0.2" friction="0.1" />
  </joint>


  <joint name = "joint_2" type="continuous">
    <parent link = "base_link"/>
    <child link = "link2"/>
    <origin xyz = "0.05 -0.05 0.05"/>
    <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    <axis xyz = "0 0 1"/>
    <dynamics damping="0.2" friction="0.1" />
  </joint>


  <joint name = "joint_3" type="continuous">
    <parent link = "base_link"/>
    <child link = "link3"/>
    <origin xyz = "-0.05 0.05 0.05"/>
    <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    <axis xyz = "0 0 1"/>
    <dynamics damping="0.2" friction="0.1" />
  </joint>


  <joint name = "joint_4" type="continuous">
    <parent link = "base_link"/>
    <child link = "link4"/>
    <origin xyz = "-0.05 -0.05 0.05"/>
    <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    <axis xyz = "0 0 1"/>
    <dynamics damping="0.2" friction="0.1" />
  </joint>

  <ros2_control name="platform" type="system">
    <hardware>
        <plugin>ethercat_driver/EthercatDriver</plugin>
        <param name="master_id">0</param>
        <param name="control_frequency">1000</param>
    </hardware>

    <joint name="joint_1">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
        <command_interface name="velocity"/>
        <command_interface name="reset_fault"/>
        <ec_module name="ELMO">
            <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
            <param name="alias">0</param>
            <param name="position">0</param>
            <param name="mode_of_operation">9</param>
            <param name="slave_config">$(find pdor_description)/config/elmo_sx.yaml</param>
        </ec_module>
    </joint>
    
    <joint name="joint_2">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
        <command_interface name="velocity"/>
        <command_interface name="reset_fault"/>
        <ec_module name="ELMO">
            <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
            <param name="alias">0</param>
            <param name="position">1</param>
            <param name="mode_of_operation">9</param>
            <param name="slave_config">$(find pdor_description)/config/elmo_dx.yaml</param>
        </ec_module>
    </joint>

    <joint name="joint_3">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
        <command_interface name="velocity"/>
        <command_interface name="reset_fault"/>
        <ec_module name="ELMO">
            <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
            <param name="alias">0</param>
            <param name="position">2</param>
            <param name="mode_of_operation">9</param>
            <param name="slave_config">$(find pdor_description)/config/elmo_dx.yaml</param>
        </ec_module>
    </joint>
    
    <joint name="joint_4">
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
        <command_interface name="velocity"/>
        <command_interface name="reset_fault"/>
        <ec_module name="ELMO">
            <plugin>ethercat_generic_plugins/EcCiA402Drive</plugin>
            <param name="alias">0</param>
            <param name="position">3</param>
            <param name="mode_of_operation">9</param>
            <param name="slave_config">$(find pdor_description)/config/elmo_encoder_2000.yaml</param>
        </ec_module>
    </joint>

  </ros2_control>

</robot>